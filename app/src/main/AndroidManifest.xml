<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.softvillage.mailer_main">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="ru.evotor.permission.SELL_INTEGRATION_SERVICE" />
<!--    <uses-permission android:name="ru.evotor.permission.PAYBACK_INTEGRATION_SERVICE"/>-->
    <uses-permission android:name="ru.evotor.permission.PAYMENT_SYSTEM" />
<!--    <uses-permission android:name="ru.evotor.permission.receipt.printExtra.SET" />-->

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SWMailerTest">

        <receiver
            android:name=".receiver.ReceiptCompleteReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="evotor.intent.action.receipt.sell.RECEIPT_CLOSED" />
                <action android:name="evotor.intent.action.receipt.sell.CLEARED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.SellService"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name"
            android:permission="ru.evotor.permission.SELL_INTEGRATION_SERVICE">
            <meta-data
                android:name="ru.evotor.sales_screen.BACKGROUND_COLOR"
                android:value="#67a520" />

            <intent-filter>
                <action android:name="evo.v2.receipt.sell.receiptDiscount" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
