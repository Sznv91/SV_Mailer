            android:label="@string/app_name"
            android:permission="ru.evotor.permission.PAYBACK_INTEGRATION_SERVICE">
            <meta-data
                android:name="ru.evotor.sales_screen.BACKGROUND_COLOR"
                android:value="#673AB7" />

            <intent-filter>
                <action android:name="evo.v2.receipt.payback.receiptDiscount" />
                <category android:name="android.intent.category.DEFAULT" />
                &lt;!&ndash;<action android:name="evo.v2.receipt.sell.receiptDiscount" />
                <action android:name="evo.v2.receipt.payback.receiptDiscount" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="ru.evotor.event.payback.PURCHASER_REQUISITES" />

                <action android:name="ru.evotor.event.payback.DISCOUNT_SCREEN_ADDITIONAL_ITEMS" />&ndash;&gt;

            </intent-filter>
